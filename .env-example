# Ambiente
NODE_ENV=production
PORT=3000
APP_NAME=Colibri
# Autenticação
JWT_SECRET=your_jwt_secret_here

# E-mails com roles = Admin
ADMIN_EMAILS=admin1@example.com,admin2@example.com

# ===== SEED =====
SEED_ADMIN_EMAIL="admin@colibri.com"
SEED_ADMIN_PASSWORD="super_secret_password_123"
SEED_ADMIN_NAME="Administrador Mestre"

SEED_LANDLORD_EMAIL="locador.seed@colibri.com"
SEED_LANDLORD_PASSWORD="landlord_password_456"
SEED_LANDLORD_NAME="Ricardo Locador Padrão"

SEED_TENANT_EMAIL="locatario.seed@colibri.com"
SEED_TENANT_PASSWORD="tenant_password_789"
SEED_TENANT_NAME="Mariana Locatária Padrão"


# E-mail
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=your_email@example.com
MAIL_PASSWORD=your_secure_password
MAIL_FROM_NAME="Equipe"
MAIL_FROM_ADDRESS=suporte@example.com

# URLs
APP_URL=https://meusistema.com

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_PREFIX=prefix:
REDIS_TLS=true
REDIS_URL=redis://localhost:6379/0

# Supabase
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your_supabase_service_role_key
SUPABASE_STORAGE_BUCKET=default

# Gateway de Pagamento
ASAAS_API_URL=https://api-sandbox.asaas.com/v3
ASAAS_API_KEY=$XXXXXXXXXXXXXXXXXXXXXXXX
ASSAS_WALLET_ID=XXXXXXXXXX-XXXX-XXXX-XXXX-XXXXXXXXXXXXXXX

# Banco de Dados
POSTGRES_USER=docker
POSTGRES_PASSWORD=docker
POSTGRES_DB=colibri
DATABASE_URL=postgresql://docker:docker@localhost:5432/colibri?schema=public

# Feature flags (formato JSON válido)
FEATURE_FLAGS={"enableNewFeature":true,"experimentalMode":false}

# Logs
LOG_LEVEL=info

# Rate limiting (Throttle)
THROTTLE_TTL_DEFAULT=60
THROTTLE_LIMIT_DEFAULT=100
THROTTLE_TTL_STRICT=1
THROTTLE_LIMIT_STRICT=5

# Cache
CACHE_TTL=5
CACHE_MAX_ITEMS=100
CACHE_STORE=memory
