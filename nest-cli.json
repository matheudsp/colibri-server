{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "src/**/*.hbs",
        "outDir": "dist/src"
      },
      {
        "include": "src/**/*.png",
        "outDir": "dist/src"
      }
    ],
    "deleteOutDir": true
  }
}