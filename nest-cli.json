{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "**/*.hbs",
        "watchAssets": true,
        "outDir": "dist"
      },
      {
        "include": "**/*.png",
        "watchAssets": true,
        "outDir": "dist"
      }
    ],
    "watchAssets": true
  }
}