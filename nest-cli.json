{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "modules/pdfs/templates/**/*.hbs",
        "outDir": "dist/src"
      },
      {
        "include": "modules/pdfs/assets/**/*",
        "outDir": "dist/src"
      },
      {
        "include": "mailer/templates/**/*.hbs",
        "outDir": "dist/src"
      }
    ],
    "watchAssets": true
  }
}